{
  "name": "rey-sdk",
  "version": "0.1.0-alpha.24",
  "license": "MIT",
  "main": "dist/index.js",
  "module.root": "dist/",
  "types": "dist/index.d.ts",
  "browser": "dist/rey-sdk.js",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "nyc": "^13.0.1",
    "ts-loader": "^5.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "@types/ethereumjs-util": "^5.2.0",
    "@types/node-rsa": "^0.4.3",
    "@types/webpack": "^4.4.9",
    "axios": "^0.18.0",
    "node-rsa": "^1.0.1",
    "safe-buffer": "^5.1.2",
    "web3-eth-accounts": "^1.0.0-beta.36",
    "web3-eth-contract": "^1.0.0-beta.36",
    "web3-eth-personal": "^1.0.0-beta.36",
    "web3-utils": "^1.0.0-beta.36",
    "yarn": "^1.10.1"
  },
  "scripts": {
    "clean": "rm -rf 'dist/**/*'",
    "build": "npm-run-all clean build:*",
    "build:cjs": "tsc --listEmittedFiles",
    "build:browser": "webpack",
    "lint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "preversion": "yarn build && git add -A dist",
    "test": "mocha 'test/**/*.spec.ts'",
    "test-ci": "NODE_ENV=test nyc mocha \"test/**/*.spec.ts\""
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  }
}
